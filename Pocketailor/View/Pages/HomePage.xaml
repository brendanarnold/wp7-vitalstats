									TitleText="Select region" 
									IconImage="/Images/AppBar/appbar.globe.wire.png" >
									<i:Interaction.Triggers>
										<i:EventTrigger EventName="Tap">
											<ec:NavigateToPageAction TargetPage="/View/Pages/EditRegionPage.xaml"/>
										</i:EventTrigger>
									</i:Interaction.Triggers>
								</Controls:AboutButton>
									
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition Height="Auto"/>
										<RowDefinition Height="Auto"/>
										<RowDefinition Height="Auto"/>
									</Grid.RowDefinitions>
					
									<TextBlock 
										Grid.Row="0"
										Foreground="{StaticResource PageTxtColor}" Margin="12,0,0,0" TextWrapping="Wrap" FontSize="21.333">
										<Run Text="The default units for measurements. This can be overridden for each measurement."/>
									</TextBlock>
									<RadioButton x:Name="imperialRadioBtn" 
										Grid.Row="1"
										Content="IMPERIAL (ft/in/lb)" Margin="12,0,0,0" 
										Checked="imperialRadioBtn_Checked" Style="{StaticResource dialogRadioButtonStyle}"/>
									<RadioButton x:Name="metricRadioBtn" 
										Grid.Row="2"
										Content="METRIC (m/cm/kg)" 
										Margin="12,0,0,0" 
										Style="{StaticResource dialogRadioButtonStyle}" 
										Checked="metricRadioBtn_Checked"/>
								</Grid>

								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition Height="Auto"/>
										<RowDefinition Height="Auto"/>
										<RowDefinition Height="Auto"/>
									</Grid.RowDefinitions>
									<TextBlock
										Grid.Row="0" 
										Foreground="{StaticResource PageTxtColor}" Margin="12,24,0,0" TextWrapping="Wrap" FontSize="21.333">
										<Run Text="Allow adjustments to be sent anonymously over the internet to Pocketailor. This will be used to improve the measurements."/>
									</TextBlock>
									<RadioButton x:Name="allowFeedbackRadioBtn" 
										Grid.Row="1"
										Content="ALLOW FEEDBACK" 
										Margin="12,0,0,0" 
										Style="{StaticResource dialogRadioButtonStyle}"
										GroupName="feedbackRadioGroup" Checked="allowFeedbackRadioBtn_Checked" />
									<RadioButton x:Name="disallowFeedbackRadioBtn" 
										Grid.Row="2"
										Content="DISALLOW FEEDBACK" 
										Margin="12,0,0,0" 
										Style="{StaticResource dialogRadioButtonStyle}"
										GroupName="feedbackRadioGroup" Checked="disallowFeedbackRadioBtn_Checked" />
								</Grid>


								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition Height="Auto"/>
										<RowDefinition Height="Auto"/>
										<RowDefinition Height="Auto"/>
									</Grid.RowDefinitions>
								</Grid>
								<TextBlock
									Grid.Row="0"
									Foreground="{StaticResource PageTxtColor}" Margin="12,24,0,0" TextWrapping="Wrap" FontSize="21.333">
									<Run Text="Override the light or dark theme selection. Pocketailor will need to restart for this to take effect."/>
								</TextBlock>
								<RadioButton x:Name="lightThemeRadioBtn" 
									Grid.Row="1"
									Content="LIGHT THEME" 
									Margin="12,0,0,0" 
									Style="{StaticResource dialogRadioButtonStyle}"
									GroupName="themeRadioGroup" Checked="lightThemeRadioBtn_Checked" />
								<RadioButton x:Name="darkThemeRadioBtn" 
									Grid.Row="1"
									Content="DARK THEME" 
									Margin="12,0,0,0" 
									Style="{StaticResource dialogRadioButtonStyle}"
									GroupName="themeRadioGroup" Checked="darkThemeRadioBtn_Checked" />	

							</StackPanel>

						</Grid>
					</ScrollViewer>
				</Grid>
			</controls:PanoramaItem>
		</controls:Panorama>



		<AdDuplex:AdControl
			x:Name="adDuplexAd"
