			<controls:PanoramaItem x:Name="aboutPanoramaItem" Header="about">
				
				<Grid>
					
					<ScrollViewer>

						<Grid x:Name="aboutScrollingContainerGrid" Margin="0,0,12,-3">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>
					
							<StackPanel Margin="0,0,0,0">

								<StackPanel
									Margin="12,0,0,6">

									<Controls:QAButton
										Title="What is Pocketailor?" 
										AnswerContainerHeight="337"
										AnswerContainerName="whatIsPocketailorAnswerContainer"
										Margin="0,0,0,6"
									/>

									<StackPanel x:Name="whatIsPocketailorAnswerContainer"
										Visibility="Collapsed">
										<TextBlock Style="{StaticResource answerStyle}" Margin="0,0,0,5">
											<Run Text="Help beat vanity sizing! Enter your measurements to find out your ideal clothing size for hundreds of brands worldwide."/>
										</TextBlock>
										<TextBlock Style="{StaticResource answerStyle}" Margin="0,0,0,24">
											<Run Text="Pocketailor uses the manufacturers own size charts, but if the clothes don't fit, adjust and send the data back to the Pocketailor cloud so we can adjust the data for everyone else too."/>
										</TextBlock>
									</StackPanel>

								</StackPanel>

								<StackPanel Margin="12,0,0,6">

									<Controls:QAButton
										Title="What is Vanity Sizing?" 
										AnswerContainerHeight="280"
										AnswerContainerName="whatIsVanitySizingAnswerContainer"
										Margin="0,0,0,6"
										/>

									<StackPanel x:Name="whatIsVanitySizingAnswerContainer"
										Visibility="Collapsed">
										<TextBlock Style="{StaticResource answerStyle}" Margin="0,0,0,6">
											<Run Text="Ever find that you are a size larger than you expected in one shop and a a size smaller in another?"/>
										</TextBlock>
										<TextBlock Style="{StaticResource answerStyle}" Margin="0,0,0,6">
											<Run Text="Manufacturers have different standards for clothing sizes and some believe this is intentional to flatter their customers."/>
										</TextBlock>
										<TextBlock Style="{StaticResource answerStyle}" Margin="0,0,0,24">
											<Run Text="This is known as vanity sizing."/>
										</TextBlock>
									</StackPanel>

								</StackPanel>

								<StackPanel Margin="12,0,0,6">

									<Controls:QAButton
										Title="What happens when I make an adjustment?"
										AnswerContainerHeight="437"
										AnswerContainerName="adjustmentProcessAnswerContainer"
										Margin="0,0,0,6"
									/>

									<StackPanel x:Name="adjustmentProcessAnswerContainer"
										Visibility="Collapsed">
										<TextBlock Style="{StaticResource answerStyle}" Margin="0,0,0,6">
											<Run Text="Pocketailor is based on measurements given by each manufacturer. If you find that these are incorrect, you can adjust it in the app."/> 
										</TextBlock>
										<TextBlock Style="{StaticResource answerStyle}" Margin="0,0,0,6">
											<Run Text="Optionally this is sent back to the Pocketailor cloud anonymously so everyone that uses Pocketailor can benefit from your findings."/>
										</TextBlock>
										<TextBlock Style="{StaticResource answerStyle}" Margin="0,0,0,12">
											<Run Text="You can select whether this happens or not in the settings, here."/>
										</TextBlock>
							
										<Image Margin="0,0,0,24" HorizontalAlignment="Right" Source="/Images/RightArrow.png" Stretch="None" RenderTransformOrigin="0.5,0.5"/>

									</StackPanel>


								</StackPanel>
								<StackPanel Margin="12,0,0,6">

									<Controls:QAButton
										Title="How accurate is Pocketailor sizing?"
										AnswerContainerHeight="210"
										AnswerContainerName="guaranteeAnswerContainer"
										Margin="0,0,0,6"
										/>

									<StackPanel x:Name="guaranteeAnswerContainer"
										Visibility="Collapsed">
										<TextBlock Style="{StaticResource answerStyle}" Margin="0,0,0,6">
											<Run Text="As accurate as we can make it and with your input it will only get better!"/>
										</TextBlock>
										<TextBlock Style="{StaticResource answerStyle}" Margin="0,0,0,24" FontFamily="Segoe WP Semibold">
											<Run Text="However, we cannot accept any responsibility for purchases or other decisions made based on Pocketailor sizing."/>
										</TextBlock>

									</StackPanel>


								</StackPanel>
								<StackPanel Margin="12,0,0,6">

									<Controls:QAButton
										Title="Who makes Pocketailor?"
										AnswerContainerHeight="387"
										AnswerContainerName="whoAnswerContainer"
										Margin="0,0,0,6"
										/>

									<StackPanel x:Name="whoAnswerContainer"
										Visibility="Collapsed">
										<TextBlock Style="{StaticResource answerStyle}" Margin="0,0,0,6">
											<Run Text="You do! Pocketailor is built on the adjustments and feedback of its users. The bits and bytes are written by Brendan Arnold of Lassiv software."/>
										</TextBlock>
										<TextBlock Style="{StaticResource answerStyle}" Margin="0,0,0,12">
											<Run Text="Pocketailor is also built using Creative Commons photos and Open Source code, visit the 'legal and thanks' page to see a full list of contributors."/>
										</TextBlock>
										<Controls:AboutButton x:Name="legalThanksBtn" 
											TitleText="Legal and thanks" 
											Margin="0,0,0,24" 
											IconImage="/Images/AppBar/appbar.scale.unbalanced.png" Tap="legalThanksBtn_Tap" />

									</StackPanel>

						

								</StackPanel>

						

							</StackPanel>

							<StackPanel Orientation="Horizontal" 
								VerticalAlignment="Bottom" 
								Margin="12,0,0,24" Grid.Row="1">
								<TextBlock
									FontSize="32" Foreground="{StaticResource PageTxtColor}">
									<Run Text="Version"/>
								</TextBlock>
								<TextBlock 
									Margin="6,0,0,0" 
									FontSize="32"
									Text="{Binding AppVersion}" Foreground="{StaticResource PageTxtColor}" />
							</StackPanel>


						</Grid>

					</ScrollViewer>
				</Grid>

			</controls:PanoramaItem>

            <!--Panorama item two-->
			<controls:PanoramaItem x:Name="settingsPanoramaItem" Header="settings" >
				<Grid>
					<ScrollViewer>
						<Grid Margin="0,0,12,0">
							<StackPanel>
								<Controls:AboutButton x:Name="editFavouriteBrandBtn" 
									Margin="12,0,0,12"
									TitleText="Edit favourite brands" 
									IconImage="/Images/Appbar/appbar.edit.png" >
									<i:Interaction.Triggers>
										<i:EventTrigger EventName="Tap">
											<ec:NavigateToPageAction TargetPage="/View/Pages/EditBlacklistedBrands.xaml"/>
										</i:EventTrigger>
									</i:Interaction.Triggers>
								</Controls:AboutButton>
								<Controls:AboutButton x:Name="selectRegionBtn" 
