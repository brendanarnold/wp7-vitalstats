<UserControl x:Class="Pocketailor.View.Controls.AboutButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Height="75" Background="{StaticResource TileBGColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="80" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="titleTextBlock" Grid.Column="0" Margin="20,0,0,0" Text="Title Here" VerticalAlignment="Center" FontSize="{StaticResource PhoneFontSizeMediumLarge}" />
        <Image x:Name="iconImage" Grid.Column="1" Margin="0"  Source="/Images/appbar.heart.png" />
    </Grid>
</UserControl>